<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/featured?home');">
</div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="card-title"><%=@flat.name%></h1>
          <p class="card-text"><%=@flat.address%></p>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="card mt-5">
        <div class="card-body">
          <h3 class="card-title">A bit more about this flat...</h3>
          <p class="card-text"><%=@flat.description%></p>
        </div>
      </div>
    </div>
  </div>

    <div class="col-4 mt-3">
      <div class="card">
        <h4 class="card-title ml-3 mt-4">Book this place!</h4>
        <div class="card-body">
        <form>
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">From:</span>
              </div>
              <input type="text" class="form-control" placeholder="12/10/2020" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">To:</span>
              </div>
              <input type="text" class="form-control" placeholder="18/10/2020" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <button type="submit" class="btn btn-success btn-block">Book</button>
          </div>
        </form>
        </div>
      </div>
    </div>

      <div class="card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="fas fa-user-friends mr-2"><span><%=@flat.number_of_guests%></span></i>
          </div>
          <div class="flex ml-3">
            <i class="fas fa-euro-sign mr-2"><%=@flat.price_per_night%></i>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fas fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
